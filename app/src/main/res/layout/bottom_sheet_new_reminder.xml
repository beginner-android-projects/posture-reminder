<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="bottomSheet"
            type="com.puntogris.posture.ui.new_reminder.NewReminderBottomSheet" />
        <variable
            name="viewModel"
            type="com.puntogris.posture.ui.new_reminder.NewReminderViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        style="@style/Theme.Posture.Layout"
        android:layout_height="match_parent"
        tools:context=".ui.new_reminder.NewReminderBottomSheet">

        <TextView
            android:id="@+id/layoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="55dp"
            android:text="@string/create_reminder_label"
            style="@style/Theme.Posture.MediumTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:foreground="?actionBarItemBackground"
            android:onClick="@{()-> bottomSheet.dismiss()}"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        <View-->
<!--            android:id="@+id/divider5"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="8dp"-->
<!--            android:alpha="0.2"-->
<!--            android:background="@color/grey"-->
<!--            android:elevation="1dp"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            tools:layout_editor_absoluteY="200dp" />-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/saveButton"
            app:layout_constraintTop_toBottomOf="@+id/layoutTitle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            style="@style/Theme.Posture.Button"
            android:layout_width="match_parent"
            android:text="@string/action_save"
            android:onClick="@{()-> bottomSheet.onSaveReminder()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>