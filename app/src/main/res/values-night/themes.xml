<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Posture" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/nightBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/gray_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/nightBackground</item>
    </style>

    <style name="Theme.Posture.Layout">
        <item name="android:background">@color/nightBackground</item>
    </style>

    <style name="Theme.Posture.Toolbar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/nightBackground</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>